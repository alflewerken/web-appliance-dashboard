{
  "name": "web-appliance-dashboard",
  "version": "1.0.1",
  "description": "Web Appliance Dashboard macOS App",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/alflewerken/web-appliance-dashboard.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder --mac",
    "clean": "./scripts/clean.sh",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "alflewerken",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.alflewerken.webappliancedashboard",
    "productName": "Web Appliance Dashboard",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icons/AppIcon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "src/**/*",
      "index.html",
      "assets/**/*",
      "icons/**/*",
      "docker-compose.app.yml",
      "docs/**/*",
      "scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "./docker-compose.app.yml",
        "to": "docker-compose.app.yml"
      },
      {
        "from": "./docs",
        "to": "docs"
      },
      {
        "from": "./docker-images",
        "to": "docker-images"
      }
    ]
  }
}