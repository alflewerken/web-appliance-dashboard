{
  "name": "web-appliance-dashboard",
  "version": "1.1.3",
  "description": "A modern, containerized dashboard for central management and monitoring of web appliances, services, and servers",
  "author": "Alf Lewerken <your-email@example.com>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alflewerken/web-appliance-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/alflewerken/web-appliance-dashboard/issues"
  },
  "homepage": "https://github.com/alflewerken/web-appliance-dashboard#readme",
  "keywords": [
    "dashboard",
    "appliance",
    "management",
    "monitoring",
    "docker",
    "ssh",
    "vnc",
    "rdp",
    "guacamole",
    "react",
    "node",
    "express"
  ],
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "docker compose up -d",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "./scripts/build.sh",
    "build:clean": "./scripts/clean-build.sh",
    "start": "docker compose up -d",
    "stop": "docker compose down",
    "status": "./status.sh",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2"
  }
}
