{
  "name": "appliance-dashboard-backend",
  "version": "1.1.3",
  "description": "Backend API for Web Appliance Dashboard",
  "main": "server.js",
  "author": "alflewerken",
  "repository": {
    "type": "git",
    "url": "https://github.com/alflewerken/web-appliance-dashboard.git"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit --coverage=false",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration --coverage=false",
    "test:nocoverage": "cross-env NODE_ENV=test jest --coverage=false --forceExit",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json}'",
    "format:check": "prettier --check '**/*.{js,json}'"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-ws": "^5.0.2",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.14.2",
    "node-fetch": "^3.3.2",
    "node-ssh": "^13.2.1",
    "pg": "^8.11.3",
    "sequelize": "^6.37.7",
    "ssh2": "^1.16.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!**/*.backup.*",
      "!**/*.bak",
      "!routes/debug/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.backup\\.",
      "\\.bak$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
